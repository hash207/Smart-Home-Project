MDScreenManager
    Home:

<Home>
    # StackLayout to arrange widgets vertically
    StackLayout:

        # MDTopAppBar with correct positioning
        MDTopAppBar:
            title: "Smart Led Control"
            pos_hint: {"top": 1}  # Set top position at 1

        FloatLayout:
            MDCard:
                size_hint: .9, .6
                pos_hint: {'x': .05, 'y': .25}
            MDTextField:
                id: ip
                hint_text: "Enter the Ngrok's tunnels"
                size_hint: None,None
                width: 200
                pos_hint: {'x': .35, 'y': .65}
            MDLabel:
                id: resp
                text: ""
                pos_hint: {'x': .45, 'y': .4}
            MDRoundFlatButton:
                text: "Led 1"
                pos_hint: {'x': .2, 'y': .5}
                on_release: root.toggel_led(self)
            MDRoundFlatButton:
                text: "Led 2"
                pos_hint: {'x': .7, 'y': .5}
                on_release: root.toggel_led(self)